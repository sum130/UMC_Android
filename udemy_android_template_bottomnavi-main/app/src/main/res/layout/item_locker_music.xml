<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_locker_music_img_cardView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp">
        <ImageView
            android:id="@+id/item_locker_music_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_album_exp2"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>
    
    <ImageView
        android:id="@+id/locker_music_dot_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:id="@+id/locker_music_play_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_miniplayer_play"
        app:layout_constraintEnd_toStartOf="@+id/locker_music_dot_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/item_locker_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:text="LILAC"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/item_locker_music_img_cardView"
        app:layout_constraintTop_toTopOf="@+id/item_locker_music_img_cardView"/>

    <TextView
        android:id="@+id/item_locker_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginStart="20dp"
        android:text="아이유 (IU)"
        android:textColor="#a8a8a8"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/item_locker_music_img_cardView"
        app:layout_constraintTop_toBottomOf="@+id/item_locker_title_tv"/>










</androidx.constraintlayout.widget.ConstraintLayout>